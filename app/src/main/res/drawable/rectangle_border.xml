<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景颜色 -->
    <solid android:color="@android:color/white" /> <!-- 背景颜色，可以根据需要修改 -->

    <!-- 设置边框 -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />     <!-- 边框宽度 -->

    <!-- 设置角的半径 -->
    <corners android:radius="4dp" />  <!-- 圆角半径，可调整为 0dp 来去掉圆角 -->
</shape>
